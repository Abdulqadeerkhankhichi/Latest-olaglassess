    <style>
        @@media(min-width: 300px) and (max-width: 900.98px) {
            .ordering-details-left img {
                width: 350px !important;
            }
        }
        .products .prooduct-design li {
            display: inline-block;
            /* padding: 5px 7px; */
            margin-right: 12px;
            background-color: var(--Gary2);
            color: var(--Gary);
            margin-bottom: 0px !important;
            transition: .4s;
            cursor: pointer;
            font-size: 15px;
            letter-spacing: 0.5px;
            padding: 4px 8px;
            height: 34px;
            text-align: center;
            font-size: 20px;
            line-height: 130%;
            text-align: center;
            text-transform: capitalize;
        }

        .products .prooduct-design {
            margin-top: 0px !important;
        }

        .product-details .product-details-list {
            justify-content: none !important;
        }

        .select2-container {
            width: 100% !important;
        }

        .product-details ul .product-details-item {
            width: 20.7% !important;
            margin-right: 0px;
        }

        .products .product-details .product-details-item span {
            color: var(--black);
            font-size: 20px;
            letter-spacing: 0;
            line-height: 100% !important;
            text-transform: capitalize;
            font-weight: 400;
        }

        dl, ol, ul {
            margin-top: 0;
            margin-bottom: 0rem !important;
        }

        .sawyer .sawyer-right .product-button {
            margin-bottom: 0px !important;
        }


        .abcRioButton .abcRioButtonLightBlue {
            width: 70% !important;
        }

        .abcRioButtonContents {
            font-size: 21px !important;
        }

        svg {
            width: 100%
        }


        #fitmixContainer {
            width: 100%;
            height: 100%
        }

        #popupContainer {
            /*position: absolute;*/
            left: 10px;
            top: 20px;
            /*width: 0px;*/
            height: 400px;
            display: none;
        }

        #popupClose {
            text-align: center;
            background: rgb(200,200,200);
            padding: 4px;
        }

        /*button {
            display: block;
            margin: 4px;
