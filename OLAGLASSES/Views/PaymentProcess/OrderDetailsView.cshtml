<body>
    <section class="ordering-hero-aria">
        <div class="container-fluid custum-pd">
            <div class="ordering-bg">
                <!-- <div class="heart-shapes">
                   <img src="assets/img/heart-shape.png" alt="img">
                </div> -->
                <div class="ordering-hero-aria-details">
                    <h1>Thanks for ordering</h1>
                    <h4>We’re getting your order ready to be shipped</h4>
                </div>
            </div>
        </div>

    </section>
    <!-- ::::ordering-hero-aria  end:::::: -->
    <!-- ::::ordering-details start:::::: -->
    <!-- ::::ordering-details start:::::: -->
    <section class="ordering-details">
        <div class="has-bg">
            <div class="has-bg-user-left">
                <img src="~/assets/img/user-information-left-bg.png" alt="img">
            </div>
            <div class="has-bg-user-right">
                <img src="~/assets/img/user-information-right-bg.png" alt="img">
            </div>
        </div>
        <div class="container-fluid custum-pd">
            <div class="ordering-details-bg">

                @{ string orderID = "";}
                @{ int Acc = 0; int Frame = 0;}
                @foreach (var item in spgetorderDetails)
                {
                    if (item.ProductVariation > 0)
                    { Frame = Frame + 1; }
                    else
                    {
                        Acc = Acc + 1;
                    }
                }

                @foreach (var item in spgetorderDetails)

                {

                    <div class="row align-items-center ">
                        <div class="col-lg-6">
                            <div class="ordering-details-left">
                                <image id="image0_427:1953" width="600" src="@item.ProductImage" />
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="ordering-details-right">

                                <!-- <div class="coustumer-details"> -->
                                <ul class="account-name d-flex justify-content-between  align-items-center flex-wrap">
                                    <li>Account name : @item.BFname @item.BLname</li>
                                    @*<li>Account Number : </li>*@
                                </ul>
                                <ul class="account-name d-flex justify-content-between  align-items-center flex-wrap">
                                    <li>Order Number : #@item.OrderID</li>
                                    @*<li>Shipping Option: </li>*@
                                </ul>
                                <div class="order-recipt">
                                    <p>Order receipt email : <a href="#"> @item.BEmail</a></p>
                                </div>
                                <table class="table table-borderless">
                                    <thead>
                                        <tr>
                                            <th scope="col">Frame</th>
                                            <th scope="col">Color/size</th>
                                            <th scope="col">Price</th>
                                            <th scope="col">Qty</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        <tr>
                                            <td>@item.Productname</td>
                                            <td>@item.FrameColor</td>
                                            <td>$@item.ProductTotal</td>
                                            <td>@item.quantity</td>

                                        </tr>



                                    </tbody>
                                </table>

                                <div class="d-flex billing-flex d-flex justify-content-between flex-wrap">
                                    <div class="billing-left">
                                        <h4>Billing Information</h4>
                                        <p>@item.BAddress, @item.BCity, @item.BState, @item.BCountry</p>
                                        <a href="#">@item.BPhone</a>
                                    </div>
                                    <div class="billing-left billing-right">
                                        <h4>Shipping address</h4>
                                        <p>@item.SAddress, @item.SCity, @item.SState, @item.SCountry</p>
                                        <a href="#">@item.SPhone</a>
                                        <a href="#">@item.SPhone</a>
                                    </div>


                                </div>
                                <div class="shopping-flex ">
                                    <a class="shopping-btn" href="@Url.Action("MovetoOrdercart","Products")">continue shopping</a>
                                    <h4>Share your new frame with your friends!</h4>
                                </div>
                                <!-- </div> -->
                            </div>

                        </div>
                    </div>


                    <hr />
                }
                @foreach (var item in spgetorderDetails)

                {
                    <div class="row align-items-center ">
                        <div class="col-lg-6">
                            <div class="ordering-details-left">

                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="ordering-details-right" style="padding:0px !important">


                                <table class="table table-borderless">

                                    <tbody>


                                        <tr>
                                            <td></td>
                                            <td>Tax</td>
                                            <td>$@item.TaxAmount</td>
                                            <td></td>

                                        </tr>
                                        <tr>
                                            <td></td>
                                            <td>Shipping Amount</td>
                                            <td>$@item.ShippingAmount</td>
                                            <td></td>

                                        </tr>
                                        <tr>
                                            @if (@item.Discount != null && @item.Discount > 0)
                                            {
                                                <td></td>
                                                <td>Discount(@item.Discountpercentage %)</td>
                                                <td>$@item.Discount</td>
                                                <td></td>

                                            }


                                        </tr>
                                        <tr>
                                            <td></td>
                                            <td>Grand Total</td>
                                            <td>$@item.TotalAmount</td>
                                            <td></td>

                                        </tr>
                                    </tbody>
                                </table>



                                <!-- </div> -->
                            </div>

                        </div>
                    </div>
                    break;
                }
            </div>

        </div>
    </section>
    <!-- ::::ordering-details end:::::: -->
    <br />
